{
    "family": "image-recognition-api",
    "containerDefinitions": [
        {
            "name": "api",
            "image": "${ECR_REPOSITORY}:latest",
            "memory": 2048,
            "cpu": 1024,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 8000,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "LOG_LEVEL",
                    "value": "INFO"
                },
                {
                    "name": "MAX_IMAGE_SIZE",
                    "value": "10485760"
                },
                {
                    "name": "MODEL_NAME",
                    "value": "microsoft/resnet-50"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/image-recognition-api",
                    "awslogs-region": "ap-northeast-1",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "networkMode": "awsvpc",
    "cpu": "1024",
    "memory": "2048",
    "executionRoleArn": "${ECS_EXECUTION_ROLE_ARN}",
    "taskRoleArn": "${ECS_TASK_ROLE_ARN}"
}
