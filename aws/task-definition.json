{
    "family": "image-recognition-api",
    "containerDefinitions": [
        {
            "name": "api",
            "image": "${ECR_REPOSITORY}:latest",
            "memory": 4096,
            "cpu": 2048,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 8000,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "LOG_LEVEL",
                    "value": "INFO"
                },
                {
                    "name": "MAX_IMAGE_SIZE",
                    "value": "10485760"
                },
                {
                    "name": "MODEL_NAME",
                    "value": "microsoft/resnet-50"
                }
            ],
            "healthCheck": {
                "command": [
                    "CMD-SHELL",
                    "curl -f http://localhost:8000/healthz || exit 1"
                ],
                "interval": 30,
                "timeout": 5,
                "retries": 3,
                "startPeriod": 60
            },
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/image-recognition-api",
                    "awslogs-region": "ap-northeast-1",
                    "awslogs-stream-prefix": "ecs",
                    "awslogs-create-group": "true"
                }
            }
        }
    ],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "networkMode": "awsvpc",
    "cpu": "2048",
    "memory": "4096",
    "executionRoleArn": "${ECS_EXECUTION_ROLE_ARN}",
    "taskRoleArn": "${ECS_TASK_ROLE_ARN}",
    "tags": [
        {
            "key": "Environment",
            "value": "Production"
        },
        {
            "key": "Application",
            "value": "ImageRecognitionAPI"
        }
    ]
}
